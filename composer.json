{
  "name": "factorio-item-browser/common",
  "description": "Common classes and interfaces used throughout the Factorio Item Browser project.",
  "homepage": "https://github.com/factorio-item-browser/common",
  "type": "library",
  "keywords": ["Factorio Item Browser", "FIB", "common", "BluePsyduck"],
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "BluePsyduck",
      "email": "bluepsyduck@gmx.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^7.2"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.10",
    "phpstan/phpstan-phpunit": "^0.10",
    "phpstan/phpstan-strict-rules": "^0.10",
    "phpunit/phpunit": "^7.2",
    "rregeer/phpunit-coverage-check": "^0.1",
    "squizlabs/php_codesniffer": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "FactorioItemBrowser\\Common\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FactorioItemBrowserTest\\Common\\": "test/src"
    }
  },
  "scripts": {
    "coverage-check": "coverage-check test/log/clover.xml 100",
    "phpcbf": "phpcbf -p --colors",
    "phpcs": "phpcs -p --colors",
    "phpstan": "phpstan analyse --no-interaction --ansi",
    "phpunit": "phpunit --colors=always --coverage-html=test/log --coverage-clover=test/log/clover.xml",
    "test": [
      "@phpunit",
      "@coverage-check",
      "@phpcs",
      "@phpstan"
    ]
  }
}
